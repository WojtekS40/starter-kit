<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
   	xmlns="sap.m"
	xmlns:core="sap.ui.core"
   controllerName="stk.starterkit.controller.CreateCustomer"
    displayBlock="true"
>


    <Page title="Create New Customer"
           xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
        id="CreateCustomer"
        showNavButton="true"
        navButtonPress="handleNavButtonPress"
       >


       
 <Button id="_IDGenButton1" text="Create" press="onCreateButtonPress"  />
         <content>

<VBox id="_IDGenVBox1" justifyContent="Center" alignItems="Center" xmlns="sap.m">
    <HBox id="_IDGenHBox1" justifyContent="Center" alignItems="Center" >
    <Label id="_IDGenLabel1" text="Customer ID" textAlign="Left" />
    <Input id="CustomerID" width="200px" textAlign="Left" />
     </HBox>
   <HBox id="_IDGenHBox2" justifyContent="Center" alignItems="Center" >
    <Label id="_DGenLabel2" text="Customer Name" textAlign="Left" />
    <Input id="CustomerName" width="200px" textAlign="Left" />
      </HBox>
  </VBox>

        </content>
    </Page>


</mvc:View>